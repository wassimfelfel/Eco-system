{% extends 'base.html.twig' %}

{% block content %}
    <h1>Ticket</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ticket.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ ticket.description }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{% if ticket.statut %}ouvert{% else %}ferm√©{% endif %}</td>

            </tr>
            <tr>
                <th>Sujet</th>
                <td>{{ ticket.sujet }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if ticket.createdat %}{{ ticket.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Attachment</th>
                <td>{{ ticket.attachment }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a class="theme_button color1" href="{{ path('ticket_index') }}">Back to the list</a>

        </li>
        <li>
            <a class="theme_button color1" href="{{ path('ticket_edit', { 'id': ticket.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
