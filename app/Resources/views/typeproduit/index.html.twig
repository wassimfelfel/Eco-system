{% extends 'base.html.twig' %}

{% block content %}
    <h1>Typeproduits list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Date de création</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for typeproduit in typeproduits %}
            <tr>
                <td><a href="{{ path('admin_typeproduit_show', { 'id': typeproduit.id }) }}">{{ typeproduit.id }}</a></td>
                <td>{{ typeproduit.nom }}</td>
                <td>{% if typeproduit.createat %}{{ typeproduit.createat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_typeproduit_show', { 'id': typeproduit.id }) }}">Afficher</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_typeproduit_edit', { 'id': typeproduit.id }) }}">Modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_typeproduit_new') }}">Créer un nouveau type produit</a>
        </li>
    </ul>
{% endblock %}
