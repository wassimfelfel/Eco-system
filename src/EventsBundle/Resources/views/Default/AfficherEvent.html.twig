{% extends 'base.html.twig' %}
{% block content %}

    <section class="ls section_padding_top_100 section_padding_bottom_100 columns_padding_25">
        <div class="container">
            <div class="row">

                <div class="col-sm-10 col-sm-push-1">

                    {% for flashMessage in app.session.flashbag.get('info') %}
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <h4><i class="icon fa fa-ban"></i> Alert!</h4>
                            {{ flashMessage }}
                        </div>
                    {% endfor %}

                </div>
            </div>
        </div>
    </section>
    {% for entity in Events %}
        <article class="post side-item content-padding with_background rounded">

            <div class="row">

                <div class="col-md-5">
                    <div class="item-media">
                        <img src="{{ asset('uploads/images/Events/' ~ entity.image) }} " alt="">
                        <div class="media-links">
                            <a class="abs-link" title="" href=""></a>
                        </div>
                    </div>
                </div>

                <div class="col-md-7">
                    <div class="item-content">
                        <h4>
                            <a href="Afficher1Event/{{ entity.id }}">{{ entity.titre }}</a>
                        </h4>
                        <i class="glyphicon glyphicon-user"></i> Ajouter par :{{ entity.user.username }}
                        <p class=" grey darklinks">
                            <span class="rightpadding_20"><i class="fa fa-calendar highlight"></i> {% if entity.date %}{{ entity
                                .date|date('Y-m-d H:i:s') }}{% endif %}</span>
                            <i class="fa fa-map-marker highlight"></i> {{ entity.Adresse }}
                        </p>
                        <p>{{ entity.categories.nom }} </p>

                        <button class="btn-danger"><a href="{{ path('SupprimerEvent',{'id':entity.id}) }}">supprimer</a></button><br>
                        <button><a href="{{ path('ModifierEvent',{'id':entity.id}) }}">Modifier</a></button>

                    </div>
                </div>

            </div>

        </article>



      {% endfor %}
{% endblock %}