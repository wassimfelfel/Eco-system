{% extends 'base.html.twig' %}

{% block content %}
<section class="ls section_padding_top_100 section_padding_bottom_100 columns_padding_25">
    <div class="container">
        <div class="row">

            <div class="col-sm-10 col-sm-push-1">

                <article class="event-single vertical-item content-padding with_background rounded">
                    <div class="item-media entry-thumbnail">
                        <img src="{{ asset('uploads/images/Events/' ~ Events.image) }}" alt="">
                    </div>

                    <div class="item-content">

                        <header class="entry-header">

                            <p class="grey darklinks margin_0">
                                <i class="glyphicon glyphicon-user"></i> Ajouter par :{{ Events.user.username }}<br>
                                <span class="rightpadding_20"><i class="fa fa-calendar highlight"></i> {% if Events.date %}{{ Events
                                    .date|date('Y-m-d H:i:s') }}{% endif %}</span>
                                <i class="fa fa-map-marker highlight"></i> {{ Events.adresse }}
                                <i class="fa fa-map-marker highlight"></i> {{ Events.categories.nom }}

                            </p>

                            <h1 class="entry-title topmargin_10">
                                <a href="event-single-left.html" rel="bookmark">{{ Events.titre }}</a>
                            </h1>

                        </header>
                        <!-- .entry-header -->

                        <div class="entry-content">

                            <p>
                                {{ Events.description }}
                            </p>


                        </div>

                    </div>
                    <!-- .item-content -->

                </article>

    <ul>
        <li>
            <a href="{{ path('AfficherEvent') }}">Back to Events</a>
        </li>
        <li>
            <a href="{{ path('ModifierEvent', { 'id': Events.id }) }}">Modifier</a>
        </li>
        <li>
            <a href="{{ path('SupprimerEvent', { 'id': Events.id }) }}">Supprimer</a>
        </li>

    </ul>
            </div>
        </div>
    </div>
</section>

{% endblock %}
